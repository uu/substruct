<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
	<title><%=
		if @title then
			h @title
		else
			h controller.controller_name
		end
		-%> : <%=h @store_name %></title>
	<%= javascript_include_tag :defaults, :cache => 'default' %>
  <%= javascript_include_tag 'substruct', 'subModal', :plugin => 'substruct', :cache => 'substruct' %>
  <%= stylesheet_link_tag 'main', 'subModal', :plugin => 'substruct', :cache => 'substruct' %>
	<%= yield :header %>
</head>
<body>

<!-- Begin Container -->
<div id="container">
	<div id="header">
		
		<!-- top links -->
		<ul class="navigation" id="toplinks">
            <%= content_tag :li, link_to(t(:contact_us), :controller => 'questions', :action => 'ask') %>
            <%= content_tag :li, link_to(t(:continue_shopping), :controller => 'store') %>
		</ul>
				
		<!-- logo -->
		<div style="float:left;">
			<a href="/"><%= image_tag('public-ui/logo.gif', :alt => 'Substruct', :plugin => 'substruct') %></a>
		</div>
		
		
		<div class="clear"></div>
	</div>
	<!-- End header -->

	<!-- Begin content body  -->
	<div id="contentBody">
		
    <%= render :partial => '/shared/flash', :locals => { :flash => flash } %>
		
		<%= yield %>
	</div>
	<!-- End content body -->


	<div id="footer">
		<ul class="navigation">
            <%= content_tag :li, link_to(t(:home), '/') %>
            <%= content_tag :li, link_to(t(:faq), :controller => 'questions', :action => 'faq') %>
            <%= content_tag :li, link_to(t(:contact_us), :controller => 'questions', :action => 'ask') %>
            <%= content_tag :li, link_to(t(:blog), :controller => 'blog', :action => 'index') %>
            <%= content_tag :li, link_to(t(:wishlist), :controller => 'customers', :action => 'wishlist') %>
            <%= content_tag :li, link_to(t(:cart), {:controller => 'store', :action => 'show_cart'}, :class => 'submodal-600-400') %>
		</ul>
	</div>
	<div class="clear"></div>
	<br/>
	
</div>
<!-- End container -->

</body>
</html>
