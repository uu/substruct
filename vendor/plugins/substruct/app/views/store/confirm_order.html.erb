<div id="left">

	<h1><%= @title %></h1>

<% if Order.get_cc_processor == 'PayPal IPN' -%>
  <form action="<%= @paypal_url %>" method="POST">
  <%= render(:partial => 'paypal_cart', :locals => {:cart => @order}) %>
<% else -%>
  <%= form_tag :action => 'finish_order' %>
<% end -%>

	<div class="padLeft">
		<%= render(:partial => 'cart_contents', :locals => {:cart => @order}) %>
		
		<br/>
	
		<div class="line"></div>
		
	  <p>
	    <%= submit_tag t(:submit_your_order), :class => 'button', :id => 'submit_button', :disable_with => t(:submit_order_information_info) %>
	  </p>
	</div>

	</form>
</div>

<div id="right">
    <%= content_tag :h1, t(:help) %>
    <%= content_tag :p, t(:confirm_order_help1) %>
    <%= content_tag :p, t(:confirm_order_help2) %>
	<%= render :partial => 'clear_cart' %>
</div>

<div class="clear"></div>
