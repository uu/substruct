<div class="padLeft">

	<div class="floatHalf">
		<%= make_label(t(:first_name)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").first_name %>
		</div>
	</div>

	<div class="floatHalf">
		<%= make_label(t(:last_name)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").last_name %>
		</div>
	</div>

	<div class="clear">&nbsp;</div>

	<div class="floatHalf">
		<%= make_label(t(:address)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").address %>
		</div>
	</div>

	<div class="floatHalf">
		<%= make_label(t(:city)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").city %>
		</div>
  </div>

	<div class="clear">&nbsp;</div>

	<div class="floatHalf">
		<%= make_label(t(:state)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").state %>
		</div>
	</div>

	<div class="floatHalf">
		<%= make_label(t(:country)) %>
		<div class="padLeft">
			<%= Country.find(instance_variable_get("@#{address_type}_address").country).name %>
		</div>
	</div>

	<div class="clear">&nbsp;</div>

	<div class="floatHalf">
		<%= make_label(t(:postal_code)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").zip %>
		</div>
	</div>

	<div class="clear">&nbsp;</div>

	<div class="floatHalf">
		<%= make_label(t(:phone)) %>
		<div class="padLeft">
			<%= instance_variable_get("@#{address_type}_address").telephone %>
		</div>
	</div>

</div>
