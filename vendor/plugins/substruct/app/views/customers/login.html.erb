<div id="left">
	
	<h1><%= @title %></h1>
	<%= form_tag :action => 'login' %>
		<div class="form_block">
			<input type="hidden" name="modal" value="<%= params[:modal] %>" />
			<p>
				<%= make_label(t(:your_email_address), true) %>
				<input type="text" class="textInput" size="40" name="login" id="email_address" value="<%= params[:login] %>" />
			</p>
			<script language="javascript">
				$('email_address').focus();
			</script>

			<p>
				<%= make_label(t(:any_previous_order_number), true) %>
				<input type="password" class="textInput" name="password" />
				<br/>
                <%= content_tag :span, t(:any_previous_order_number_info), :class => 'info' %>
			</p>
			
			<p>
				<%=
					link_to(
					    t(:do_not_remeber_your_password),
						:controller => 'customers',
						:action => 'reset_password',
						:params => {
							:modal => params[:modal],
							:login => params[:login]
						}
					)
				%>
			</p>
			<% if !@is_modal %>
				<p>
					<%=
						link_to(
							t(:not_a_customer_yet),
							{
								:controller => 'customers',
								:action => 'new'
							},
							:class => 'action'
						)
					%>
				</p>
			<% end %>
		
		  <div class="line">&nbsp;</div>

	    <p>
	      <%= submit_tag t(:login), :class => 'button twohundred' %>
	      <div class="clear">&nbsp;</div>
	    </p>
		
		</div>
	</form>
</div>

<div id="right">
	<% if @is_modal %>
        <%= content_tag :h3, t(:welcome_back) %>
        <%= content_tag :p, t(:welcome_back_help1), :class => 'hlt', :style => 'padding:5px;' %>
        <%= content_tag :p, t(:welcome_back_help2) %>
	<% else %>
        <%= content_tag :h2, t(:directions) %>
        <%= content_tag :p, t(:directions_help1) %> 
        <%= content_tag :p, t(:directions_help2) %> 
	<% end %>
</div>

<div class="clear"></div>
