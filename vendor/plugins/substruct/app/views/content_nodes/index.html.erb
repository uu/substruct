<div id="left">
  <%= content_tag :h1, t(:blog) %>

  <% for node in @content_nodes %>
    <h2 class="cap"><a href="/blog/<%= node.name %>/"><%= node.title %></a></h2>
    <div class="padLeft">
      <%= get_markdown_snippet(node.content) %>
      <div class="line">&nbsp;</div>
      <p class="info">
        <%= link_to(t(:read_more), :controller => 'blog', :action => node.name) %>
        |
        <%= t(:published) + ":" + node.display_on.strftime("%m/%d/%y") %>
      </p>
    </div>
  <% end %>

  <% if @content_nodes.length == 0 then %>
    <%= content_tag :p, t(:no_content_has_been_created, :admin_section_url => link_to(t(:admin_section), :controller => 'admin', :action => 'index')) %>
  <% end %>

	<%= will_paginate @content_nodes %>

</div>

<div id="right">
	<%= render :partial => 'section_list' %>
</div>

<div class="clear"></div>
