<% if @sections.size > 0 %>
    <%= content_tag :h2, t(:content_by_section) %>

	<!-- View content by section -->
	<ul id="view_sections">
		<%= render(:partial => 'section_list_view_item', :collection => @sections) %>
	</ul>
	<p>
		<%= 
			link_to(
				t(:view_all_content),
				:controller => 'content_nodes',
				:action => 'index'
			)
		%>
	</p>
<% end %>
