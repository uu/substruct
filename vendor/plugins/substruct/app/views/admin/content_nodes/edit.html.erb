<%= form_tag({:action => 'update', :id => @content_node}, :multipart => true) %>
	<div id="left">
	  <h1><%= @title %></h1>
	  <ul class="navigation secondary">
        <%= content_tag :li, link_to(t(:back_to_content_list), :controller => 'content_nodes', :action => 'list') %>
	  </ul>

	  <%= content_tag :div, t(:content_edit_warning), :class => 'warning' %>
	  <br/>
	    <%= render :partial => 'form' %>
	    <div class="line">&nbsp;</div>
	    <%= submit_tag t(:save_this_content), :class => 'button hundredthirty' %>


		<div style="float:right;">
			<%= link_to t(:show), :action => 'show', :id => @content_node %> |
		  <%= link_to t(:delete_this_content), {:action => 'destroy', :id => @content_node}, :confirm => t(:confirm), :class => 'action' %>
		</div>
	
	  <div class="clear">&nbsp;</div>
	  <br/>
	</div>


	<!-- RIGHT -->
	<div id="right">
		<%= render :partial => 'crud_sidebar' %>
	</div>
	<div class="clear">&nbsp;</div>

</form>
