<!--[form:content_node]-->
<div class="floatHalf">
	<p>
	  <label for="content_node_title"><%= t(:title) %></label>
	  <%= text_field 'content_node', 'title', :class => 'textInput'  %>
	  <br/>
      <%= content_tag :span, t(:appers_in_the_browser_title_bar), :class => 'info' %>
	</p>
	<p>
	  <label for="content_node_display_one"><%= t(:display_date) %></label>
	  <%= date_select 'content_node', 'display_on'  %>
	</p>
</div>
<div class="floatHalf">
	<p>
    <label for="content_node_name"><%= t(:url) %></label>
	  <%= text_field 'content_node', 'name', :class => 'textInput'  %>
	  <%= error_message_on(:content_node, :name) %>
	  <br/>
	  <span class="info">
	    <ul>
      	 <%= t(:url_info) %> 
	    </ul>
	  </span>
	</p>
	
	<p><label><%= t(:content_type) %></label>
	  <%= select_tag('content_node[type]', options_for_select(ContentNode::TYPES, @content_node.type.to_s)) %>
	  <br/>
      <%= content_tag :span, t(:content_type_info), :class => 'info' %>
	</p>

</div>
<div class="clear">&nbsp;</div>

<br/>

<!-- content tabs -->


<!-- content edit -->
<%= content_tag :h3, t(:content) %>
<div id="content_edit">
    <%#= content_tag :span, t(:content_info), :class => 'info' %>
  <%#= text_area 'content_node', 'content', :cols => 70, :rows => 10, :class => 'textArea'  %>
  <%= text_area('content_node', 'content', :class => 'mceEditor', :cols => 95, :rows => 30) %>

</div>


<!-- LATEST UPLOADS & UPLOAD FILE FORM -->
<%= content_tag :h3, t(:upload_files_with_this_content) %>
<%= 
	render :partial => '/shared/multiple_upload',
		:locals => {
			:name => 'file',
			:input_size => '30'
		}
%>
<%= content_tag :p, t(:upload_files_with_this_content_info), :class => 'info' %>
