<div id="left">
	<%= content_tag :h1, t(:view_content_by_section) %>
	<ul class="navigation secondary">
    <%= content_tag :li, link_to(t(:back_to_content_list), :controller => 'content_nodes', :action => 'list') %>
  </ul>
	<!-- View content by section -->
	<ul id="view_sections">
		<% if @sections.length > 0 %>
			<%= render(:partial => 'section_list_view_item', :collection => @sections) %>
		<% else %>
			<%= content_tag :li, t(:no_sections_have_been_created_yet) %>
		<% end %>
	</ul>
</div>

<%= render(:partial => 'content_right_side') %>

<div class="clear"></div>
