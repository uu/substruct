<%= content_tag :h1, t(:listing_order_accounts) %>

<table>
  <tr>
  <% for column in OrderAccount.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for order_account in @order_accounts %>
  <tr>
  <% for column in OrderAccount.content_columns %>
    <td><%=h order_account.send(column.name) %></td>
  <% end %>
    <td><%= link_to t(:show), :action => 'show', :id => order_account %></td>
    <td><%= link_to t(:edit), :action => 'edit', :id => order_account %></td>
    <td><%= link_to t(:delete), { :action => 'destroy', :id => order_account }, :confirm => t(:confirm) %></td>
  </tr>
<% end %>
</table>

<%= link_to t(:previous_page), { :page => @order_account_pages.current.previous } if @order_account_pages.current.previous %>
<%= link_to t(:next_page), { :page => @order_account_pages.current.next } if @order_account_pages.current.next %> 

<br />

<%= link_to t(:new_order_account), :action => 'new' %>
