<div id="left">
<%= form_tag :action=>"edit", :id => @user.id %>

  <%= content_tag :h1, t(:editing_user) %>
  <ul class="navigation secondary">
    <%= content_tag :li, link_to(t(:back_to_user_list), :controller =>  'users', :action => 'list') %>
  </ul>

  <%= render :partial => "form" %>

	<!-- SAVE BUTTON -->
	<div class="line" style="margin-top:20px;">&nbsp;</div>
  <%= submit_tag t(:save_this_user), :class => 'button hundred' %>

	<div style="float:right;">
  	<%= link_to t(:delete_this_user), {:action => 'destroy', :id => @user}, :confirm => t(:confirm), :method => 'post', :class => 'action' %>
	</div>
	

</form>
</div>

<!-- RIGHT -->
<div id="right">
	<h1>Help</h1>
    <%= content_tag :h1, t(:help) %>
    <%= content_tag :p, t(:user_help1) %>
    <%= content_tag :p, t(:user_help2) %>
    <%= content_tag :p, t(:user_help3) %>
	<p><%= link_to(t(:view_all_roles), :controller => 'roles', :action => 'index') %></p>
</div>
