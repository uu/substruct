<div id="left">
 <%= content_tag :h1, t(:showing_question) %> 
 <%= content_tag :h2, t(:short_question) %> 

  <div class="padLeft">
    <%=h @question.short_question %>
  </div>

  <!--
  <h2>Long Question</h2>
  <div class="padLeft">
    <%#=h @question.long_question %>
  </div>
  -->

 <%= content_tag :h2, t(:answer) %> 
  <div class="padLeft">
    <%= get_markdown(@question.answer) if !@question.answer.nil? %>
  </div>

 <%= content_tag :h2, t(:faq_rank) %> 

  <div class="padLeft">
    <%= @question.rank %>
  </div>

 <%= content_tag :h2, t(:created) %> 
  <div class="padLeft">
    <%= @question.created_on.strftime("%m/%d/%y") %>
  </div>

  <div class="line">&nbsp;</div>
  <p>
    <%= link_to t(:edit_this_question), {:action => 'edit', :id => @question} %> |
    <%= link_to t(:back_to_question_list), {:action => 'list'} %>
  </p>
</div>


<%= render(:partial => 'right_side') %>
