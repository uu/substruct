<div id="left">
  <h1><%= @title %></h1>
  <%= grid(@questions_grid, :table_html_attrs => {:id => 'questions_grid'}) do |g|
  
      g.column :column_name => t(:questions), :attribute_name => 'short_question' do |q|
        link_to(q.short_question, :action => 'edit', :id => q)
      end

      g.column :column_name => t(:created), :attribute_name => 'created_on', :no_filter => true do |q|
        q.created_on.strftime("%d.%m.%y %I:%M %p")
      end

      g.column :column_name => t(:faq_rank), :attribute_name => 'rank', :no_filter => true 

      g.column :column_name => t(:viewed), :attribute_name => 'times_viewed', :no_filter => true

  end
  %>
</div>

<%= render(:partial => 'right_side') %>
