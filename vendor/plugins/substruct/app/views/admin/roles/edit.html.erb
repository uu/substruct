<div id="left">
<% if @aname == 'new' then %>
	<%= form_tag :action=>"new" %>
<% else %>
	<%= form_tag :action=>"edit", :id => @role.id %>
<% end %>

  <%= content_tag :h1, t(:editing_role) %>
  <ul class="navigation secondary">
    <%= content_tag :li, link_to(t(:back_to_role_list), :controller =>  'roles', :action => 'list') %>
  </ul>

  <%= render :partial => "form" %>

	<!-- SAVE BUTTON -->
	<div class="line" style="margin-top:20px;">&nbsp;</div>
  <%= submit_tag t(:save_this_role), :class => 'button hundred' %>

	<div style="float:right;">
  	<%= link_to t(:delete_this_role), {:action => 'destroy', :id => @role}, :method => 'post', :confirm => t(:confirm), :class => 'action' %>
	</div>
	

</form>
</div>

<!-- RIGHT -->
<div id="right">
    <%= content_tag :h1, t(:help) %>
