<div id="left">
    <%= content_tag :h1, t(:view_products_by_tags) %>
	<ul class="navigation secondary">
    <%= content_tag :li, link_to(t(:back_to_product_list), :controller => 'products', :action => 'list') %>
  </ul>
	<!-- View products by tag -->
	<ul id="view_tags">
		<% if @tags.length > 0 %>
			<%= render(:partial => 'tag_list_view_item', :collection => @tags) %>
		<% else %>
            <%= content_tag :li, t(:no_tags_have_been_created_yet) %>
		<% end %>
	</ul>
</div>

<%= render(:partial => 'right_side') %>

<div class="clear"></div>
