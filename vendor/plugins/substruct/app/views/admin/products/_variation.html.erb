<div class="variation">
	<input type="hidden" name="variation[][id]" value="<%= variation.id %>" />
	<div class="float">
		<%= make_label(t(:name), true) %>
		<%= text_field_tag('variation[][name]', variation.short_name, :size => 30, :class => 'textInput') %>
		<br/>
        <%= content_tag :span, t(:variation_name_info), :class => 'info' %>
	</div>
	<div class="float">
		<%= make_label(t(:code), true) %>
		<%= text_field_tag('variation[][code]', variation.code, :size => 10, :class => 'textInput') %>
	</div>
	<div class="float">
		<%= make_label(t(:price)) %>
		<%= text_field_tag('variation[][price]', variation.price, :size => 6, :class => 'textInput numeric') %>
	</div>
	<div class="float">
		<%= make_label(t(:quantity)) %>
		<%= text_field_tag('variation[][quantity]', variation.quantity, :size => 6, :class => 'textInput numeric') %>
	</div>
	<div class="float">
		<%= make_label(t(:weight)) %>
		<%= text_field_tag('variation[][weight]', variation.weight, :size => 6, :class => 'textInput numeric') %>
		<br/>
        <%= content_tag :span, t(:weight_measure), :class => 'info' %>

	</div>
	<!-- remove link -->
	<div style="float:right;margin-top:20px;">
		<%= 
			link_to_remote image_tag("/plugin_assets/substruct/images/icons/png-24/16-em-cross.png", :plugin => 'substruct', :alt => t(:delete)),
	    	{
					:url => { :action => "remove_variation_ajax", :id => variation.id },
					:loading => "$('remove_variation_link_#{variation.id}').hide(); $('variation_indicator_#{variation.id}').show();",
	    		:complete => "$('remove_variation_link_#{variation.id}').up('.variation').remove();"
				},
				:id => "remove_variation_link_#{variation.id}"
		%>
		<%= image_tag("/plugin_assets/substruct/images/indicator.gif", :plugin => 'substruct', :style => 'display:none;', :id => "variation_indicator_#{variation.id}") %>
	</div>
	<div class="clear"></div>
</div>
