<div id="left">
  <h1><%= @title %></h1>

  <% if @search_term || @list_options %>
  <!-- Navigation back to all products list -->
  <%= content_tag :p, link_to(t(:show_all_products), :controller => 'products', :action => 'list') %>
  <% end %>

  <%= will_paginate @products %>
	<br/>

  <table class="list" cellpadding="0" cellspacing="0">
    <colgroup>
      <col />
      <col style="width:150px;" />
      <col style="width:110px;" />
      <col style="width:60px;" />
			<col style="width:60px;" />
    </colgroup>
    <tr>
      <th><%= t(:name) %></th>
      <th><%= t(:code) %></th>
      <th class="numeric"><%= t(:price) %></th>
      <th class="numeric"><%= t(:quantity) %></th>
			<th><%= t(:is_published) %></th>
    </tr>
  <% if @products.length > 0 then %>
    <% for product in @products %>
    <tr class="<%= alternate %>">
      <td><%= link_to(h(product.name), :action => 'edit', :id => product) %></td>
      <td><%= product.code %></td>
      <td class="numeric"><%= sub_number_to_currency(product.price) %></td>
      <td class="numeric"><%= product.quantity %></td>
			<td style="text-align:center">
				<%=
					image_tag(
						product.is_published? ? '/plugin_assets/substruct/images/icons/png-24/16-square-green.png' : '/plugin_assets/substruct/images/icons/png-24/16-square-red.png',
						:style => 'margin: 5px;'
					)
				%>
				</td>
    </tr>
    <% end %>
  <% else %>
    <tr><td colspan="4"><%= t(:no_products_to_show) %></td></tr>
  <% end %>
  </table>

	<br/>
  <%= will_paginate @products %>

</div>

<%= render(:partial => 'right_side') %>
