<%= content_tag :h2, t(:payment_information) %>
<div class="padLeft">
    <%= content_tag :p, content_tag(:span, t(:accepted_credit_cards), :class => 'hlt') %>

	<div>
		<div class="padLeft">
			<%= make_label(t(:card_number), true) %>
			<%= text_field_tag 'order_account[cc_number]', @order_account.cc_number, :maxlength => 17, :class => 'textInput' %>
	    <%= error_message_on(:order_account, :cc_number) %>

			<%= make_label(t(:expiration_date), true) %>
		  <div class="float">	
		    <%= select('order_account', 'expiration_month', OrderAccount.months) %>
		    <%= content_tag :p, t(:month), :class => 'info' %>
		  </div>
	    <div class="float">
	      <%= select('order_account', 'expiration_year', OrderAccount.years) %>
		    <%= content_tag :p, t(:year), :class => 'info' %>
	    </div>
	    <div class="float">
	      <%= error_message_on(:order_account, :expiration_month) %>
	    </div>
	    <div class="clear">&nbsp;</div>
		</div>
	</div>

</div>
